<p id="notice"><%= notice %></p>

<h1>Pets</h1>
<div class=container>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Breed</th>
        <th>Birthdate</th>
        <th>Visitas</th>
        <th>History</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pets.each do |pet| %>
        <tr>
          <td><%= pet.name %></td>
          <td><%= pet.breed %></td>
          <td><%= pet.birthdate %></td>
          <td><%= pet.historyCount%></td>
            <td>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Weight</th>
          <th>Heigth</th>
          <th>Description</th>
        </tr>
      </thead>

    <tbody>
        <% pet.pet_histories.each do |pet_history| %>
          <tr>
            <td><%= pet_history.weight %></td>
            <td><%= pet_history.heigth %></td>
            <td><%= pet_history.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
          <td><%= link_to 'Show', pet %></td>
          <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
          <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Pet', new_pet_path %>
</div>